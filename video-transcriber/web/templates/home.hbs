<!-- API Key dialog -->
<div class="modal fade" id="loginModalDialog" tabindex="-1" role="dialog" aria-labelledby="loginModalTitle" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="loginModalTitle">Enter your API key</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<label for="loginPassword">API Key:</label>
				<input class="form-control" type="password" id="loginPassword"/>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
				<button type="button" data-dismiss="modal" class="btn btn-primary" onclick="javascript:login($('#loginPassword'));">Save API Key</button>
			</div>
		</div>
	</div>
</div>

<script>
	$('#loginModalDialog').on('shown.bs.modal', function () {
		$('#loginPassword').trigger('focus');
	});

	renderLoginLogout();
</script>